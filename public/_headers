/*
  # Sécurité des frames - Empêche l'intégration dans des iframes malveillants
  X-Frame-Options: DENY
  
  # Protection contre le sniffing MIME
  X-Content-Type-Options: nosniff
  
  # Protection XSS renforcée
  X-XSS-Protection: 1; mode=block
  
  # Politique de référent stricte
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Content Security Policy (CSP) ultra-strict
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.tailwindcss.com https://fonts.googleapis.com https://www.googletagmanager.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.tailwindcss.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://www.google-analytics.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self';
  
  # Permissions restreintes
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=(), speaker=(), vibrate=(), fullscreen=(self), display-capture=()
  
  # Transport Security (HTTPS forcé si supporté)
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  
  # Protection contre les attaques de timing
  Cross-Origin-Embedder-Policy: require-corp
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: same-origin

# Cache sécurisé pour les assets statiques
/static/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.css
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.js
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Cross-Origin-Resource-Policy: cross-origin

/*.png
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.jpg
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/*.svg
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff
  Content-Security-Policy: default-src 'none'; style-src 'unsafe-inline'
