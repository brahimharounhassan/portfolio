# ============================================
# SÉCURITÉ MAXIMALE - PORTFOLIO PROTÉGÉ
# ============================================

# Désactiver la signature du serveur
ServerTokens Prod
ServerSignature Off

# Headers de sécurité renforcés
<IfModule mod_headers.c>
    # Sécurité des frames - DENY total
    Header always set X-Frame-Options "DENY"
    
    # Protection contre le sniffing MIME
    Header always set X-Content-Type-Options "nosniff"
    
    # Protection XSS maximale
    Header always set X-XSS-Protection "1; mode=block"
    
    # Politique de référent ultra-stricte
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # CSP ultra-restrictive
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.tailwindcss.com https://fonts.googleapis.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data:; connect-src 'self'; frame-ancestors 'none'; base-uri 'self'; form-action 'self';"
    
    # Permissions ultra-restreintes
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=(), speaker=(), vibrate=(), fullscreen=(self)"
    
    # HSTS (HTTPS forcé) - 1 an
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # Protection CORP/COEP/COOP
    Header always set Cross-Origin-Embedder-Policy "require-corp"
    Header always set Cross-Origin-Opener-Policy "same-origin"
    Header always set Cross-Origin-Resource-Policy "same-origin"
    
    # Masquer la version PHP/Apache
    Header unset X-Powered-By
    Header always unset X-Powered-By
    
    # Cache sécurisé
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$">
        Header set Cache-Control "max-age=31536000, public, immutable"
        Header set X-Content-Type-Options "nosniff"
    </FilesMatch>
</IfModule>

# Désactiver l'affichage des répertoires
Options -Indexes

# Bloquer l'accès aux fichiers sensibles
<FilesMatch "\.(env|log|md|json|lock|git|htaccess|htpasswd)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Bloquer l'accès aux dossiers système
RedirectMatch 404 /\.git
RedirectMatch 404 /\.next
RedirectMatch 404 /node_modules

# Protection contre les injections
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Bloquer les tentatives d'injection SQL
    RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} \.\./\.\. [OR]
    RewriteCond %{QUERY_STRING} (javascript|vbscript|onload|onerror|onclick) [NC,OR]
    RewriteCond %{QUERY_STRING} (<|%3C).*script.*(>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} (\||%7C) [NC,OR]
    RewriteCond %{QUERY_STRING} \.\. [OR]
    RewriteCond %{QUERY_STRING} (union|select|insert|drop|delete|update|create|alter) [NC]
    RewriteRule .* - [F,L]
    
    # Bloquer les user agents malveillants
    RewriteCond %{HTTP_USER_AGENT} ^$ [OR]
    RewriteCond %{HTTP_USER_AGENT} (bot|crawler|spider|scraper|harvester) [NC,OR]
    RewriteCond %{HTTP_USER_AGENT} (nikto|sqlmap|nessus|openvas) [NC]
    RewriteRule .* - [F,L]
    
    # Redirection HTTPS forcée
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# Compression sécurisée
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css
    AddOutputFilterByType DEFLATE application/xml application/xhtml+xml application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript application/x-javascript
    
    # Ne pas compresser les images (sécurité)
    SetEnvIfNoCase Request_URI \.(?:gif|jpe?g|png)$ no-gzip dont-vary
</IfModule>

# Limitation du taux de requêtes (si mod_evasive disponible)
<IfModule mod_evasive24.c>
    DOSHashTableSize    2048
    DOSPageCount        10
    DOSSiteCount        50
    DOSPageInterval     2
    DOSSiteInterval     2
    DOSBlockingPeriod   86400
</IfModule>

# ============================================
# PROTECTION DES DOCUMENTS SENSIBLES
# ============================================

# Bloquer l'accès direct aux PDFs par URL
<FilesMatch "\.(pdf|doc|docx)$">
    Order Allow,Deny
    Deny from all
    
    # Permettre seulement via l'API sécurisée
    SetEnvIf Referer "^https://brahimharounhassan\.github\.io" allowed_referer
    SetEnvIf X-Document-Request ".+" secure_request
    Allow from env=allowed_referer
    Allow from env=secure_request
</FilesMatch>

# Bloquer l'accès au dossier documents si accessible
<IfModule mod_rewrite.c>
    RewriteRule ^documents/ - [F,L]
    RewriteRule ^src/ - [F,L]
    RewriteRule \.pdf$ - [F,L]
</IfModule>
